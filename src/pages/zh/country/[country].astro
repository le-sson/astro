import countries from "../../../data/countries";
export async function getStaticPaths() {
  let result = countries.map((i) => {
    return {
      params: {
        country: i.name,
      },
    };
  });
  return result;
}

// 可以从 Astro 全局对象中解构参数
const { country } = Astro.params;
